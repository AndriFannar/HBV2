<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/nav_create_waiting_list_request">

    <fragment
        android:id="@+id/nav_user_fragment"
        android:name="is.hi.afk6.hbv2.ui.fragment.UserFragment"
        android:label="UserFragment"
        android:layout="@layout/fragment_user">
        <argument
            android:name="@string/logged_in_user"
            app:argType="is.hi.afk6.hbv2.entities.User" />
    </fragment>

    <fragment
        android:id="@+id/nav_create_waiting_list_request"
        android:name="is.hi.afk6.hbv2.ui.fragment.CreateWaitingListRequestFragment"
        android:label="@string/register_waiting_list_title"
        android:layout="@layout/fragment_create_waiting_list_request">
        <argument
            android:name="@string/logged_in_user"
            app:argType="is.hi.afk6.hbv2.entities.User" />
        <action
            android:id="@+id/action_nav_create_waiting_list_request_to_nav_waiting_list_request"
            app:destination="@id/nav_waiting_list_request" />
        <action
            android:id="@+id/action_nav_create_waiting_list_request_to_nav_edit_user"
            app:destination="@id/nav_edit_user" />
    </fragment>

    <fragment
        android:id="@+id/nav_waiting_list_request"
        android:name="is.hi.afk6.hbv2.ui.fragment.WaitingListRequestFragment"
        android:label="@string/waiting_list_title"
        android:layout="@layout/fragment_waiting_list_request">
        <argument
            android:name="@string/logged_in_user"
            app:argType="is.hi.afk6.hbv2.entities.User" />
        <action
            android:id="@+id/action_nav_waiting_list_request_to_nav_create_waiting_list_request"
            app:destination="@id/nav_create_waiting_list_request" />
        <action
            android:id="@+id/action_nav_waiting_list_request_to_nav_edit_user"
            app:destination="@id/nav_edit_user" />
    </fragment>

    <fragment
        android:id="@+id/nav_edit_user"
        android:name="is.hi.afk6.hbv2.ui.fragment.EditUserFragment"
        android:label="@string/edit_user"
        android:layout="@layout/fragment_edit_user">
        <argument
            android:name="@string/logged_in_user"
            app:argType="is.hi.afk6.hbv2.entities.User" />
        <action
            android:id="@+id/action_nav_edit_user_to_nav_waiting_list_request"
            app:destination="@id/nav_waiting_list_request" />
        <action
            android:id="@+id/action_nav_edit_user_to_nav_create_waiting_list_request"
            app:destination="@id/nav_create_waiting_list_request" />
    </fragment>
</navigation>
