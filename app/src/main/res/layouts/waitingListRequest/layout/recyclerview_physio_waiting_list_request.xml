<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/waiting_list_background"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/fragment_margin"
    android:layout_marginRight="@dimen/fragment_margin"
    android:layout_marginTop="@dimen/fragment_margin"
    android:layout_marginBottom="@dimen/fragment_margin"
    android:orientation="vertical"
    android:gravity="center_vertical"
    android:background="@color/pale_yellow">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center">

        <TextView
            android:id="@+id/waiting_list_patient"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:layout_margin="@dimen/fragment_margin"
            android:layout_weight="2"/>

        <TextView
            android:id="@+id/waiting_list_grade"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:layout_margin="@dimen/fragment_margin"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/waiting_list_questionnaire"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:layout_margin="@dimen/fragment_margin"
            android:layout_weight="2"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/waiting_list_overview_detail"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible"
        android:orientation="vertical"
        android:layout_gravity="center">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center">

            <TextView
                android:id="@+id/waiting_list_description"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:layout_margin="@dimen/fragment_margin"
                android:layout_weight="7"/>

            <TextView
                android:id="@+id/waiting_list_date"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:layout_margin="@dimen/fragment_margin"
                android:layout_weight="4"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center">

            <Button
                android:id="@+id/view_waiting_list_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/fragment_margin"
                android:text="@string/view_button_text"
                android:layout_weight="6"/>

            <Button
                android:id="@+id/accept_waiting_list_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/fragment_margin"
                android:text="@string/requests_overview_accept_button_text"
                android:layout_weight="5"/>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>