<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/questionnaire_background"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/fragment_margin"
    android:layout_marginRight="@dimen/fragment_margin"
    android:layout_marginTop="@dimen/fragment_margin"
    android:layout_marginBottom="@dimen/fragment_margin"
    android:orientation="vertical"
    android:gravity="center_vertical"
    android:background="@color/pale_yellow">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center">

        <TextView
            android:id="@+id/questionnaire_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:layout_margin="@dimen/fragment_margin"
            android:layout_weight="4"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/questionnaire_no_of_questions_text"
            android:theme="@style/Theme.HBV2.TextViewStyle"
            android:layout_marginStart="@dimen/fragment_margin"
            android:layout_marginTop="@dimen/fragment_margin"
            android:layout_marginBottom="@dimen/fragment_margin"
            />

        <TextView
            android:id="@+id/questionnaire_no_of_questions"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="@string/questionnaire_no_of_questions_placeholder"
            android:layout_margin="@dimen/fragment_margin"
            android:layout_weight="0.7"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/questionnaire_detail"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible"
        android:orientation="vertical"
        android:layout_gravity="center">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center">

            <Button
                android:id="@+id/show_hide_questionnaire_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/fragment_margin"
                android:text="@string/questionnaire_show_button_text"
                android:layout_weight="1"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center">

            <Button
                android:id="@+id/view_questionnaire_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/fragment_margin"
                android:text="@string/view_button_text"
                android:layout_weight="6"/>

            <Button
                android:id="@+id/delete_questionnaire_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/fragment_margin"
                android:text="@string/delete_button_text"
                android:layout_weight="5"/>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>